# Development Dockerfile for Backend
FROM node:18-alpine

# Install ffmpeg for media processing
RUN apk add --no-cache ffmpeg

# Create app directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Expose port
EXPOSE 5000

# Start in development mode
CMD ["npm", "run", "dev"]
