{
  "name": "whatsapp-clone-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix backend\" \"npm run dev --prefix frontend\"",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "test": "npm run test --prefix backend",
    "test:backend": "npm run test --prefix backend",
    "test:frontend": "npm run test --prefix frontend",
    "build": "npm run build --prefix frontend",
    "build:backend": "echo 'Backend does not require build'",
    "build:frontend": "npm run build --prefix frontend",
    "install:all": "npm install && npm install --prefix backend && npm install --prefix frontend",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
